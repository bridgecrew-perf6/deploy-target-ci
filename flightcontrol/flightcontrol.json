{
  "environments": [
    {
      "id": "development",
      "name": "Development",
      "region": "us-east-1",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "redwood-api",
          "name": "Redwood API",
          "type": "fargate",
          "cpu": 0.25,
          "memory": 0.5,
          "installCommand": "npm ci --production=false && yarn install --immutable",
          "buildCommand": "yarn rw build api && yarn rw prisma migrate deploy && yarn rw data-migrate",
          "startCommand": "yarn rw serve api",
          "postBuildCommand": "echo 0",
          "healthCheckPath": "/graphql/health"
        },
        {
          "id": "redwood-web",
          "name": "Redwood Web",
          "type": "static",
          "singlePageApp": true,
          "installCommand": "npm ci --production=false && yarn install --immutable",
          "buildCommand": "yarn rw build web",
          "outputDirectory": "web/dist"
        }
      ]
    }
  ]
}
